{
  "name": "eva-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "env-cmd -f ./env/.env.development next dev -p 4200",
    "debug": "env-cmd -f ./env/.env.development NODE_OPTIONS='--inspect' next dev -p 4200",
    "build": "next build",
    "start": "next start -p 5000",
    "build:qa": "env-cmd -f ./env/.env.qa next build",
    "build:staging": "env-cmd -f ./env/.env.staging next build",
    "build:production": "env-cmd -f ./env/.env.production next build",
    "test:watch": "jest --watch",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "env-cmd": "^10.1.0",
    "flagsmith": "^3.3.2",
    "next": "^12.2.2",
    "next-i18next": "^11.0.0",
    "nextjs-progressbar": "0.0.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sinon": "^14.0.0",
    "tailwindcss-rtl": "^0.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "autoprefixer": "^10.4.7",
    "babel-jest": "^28.1.2",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^28.1.2",
    "jest-fetch-mock": "^3.0.3",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.6"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
