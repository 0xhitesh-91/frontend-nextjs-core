{
  "name": "eva-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "env-cmd -f ./env/.env.development next dev -p 4200",
    "debug": "env-cmd -f ./env/.env.development NODE_OPTIONS='--inspect' next dev -p 4200",
    "build": "next build",
    "start": "next start -p 5000",
    "build:qa": "env-cmd -f ./env/.env.qa next build",
    "build:staging": "env-cmd -f ./env/.env.staging next build",
    "build:production": "env-cmd -f ./env/.env.production next build",
    "test:watch": "jest --watch",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "env-cmd": "^10.1.0",
    "next": "^10.0.0",
    "next-i18next": "^8.2.0",
    "nextjs-progressbar": "0.0.9",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "sinon": "^10.0.0",
    "tailwindcss-rtl": "^0.7.3"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/eslint-parser": "^7.14.2",
    "@testing-library/dom": "^7.30.4",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "postcss": "^8.2.13",
    "tailwindcss": "^2.1.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
